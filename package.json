{
  "name": "logwatcher",
  "displayName": "logwatcher",
  "description": "Waches files in log out dirs.",
  "publisher": "ravarcade",
  "repository": {
    "type": "git",
    "url": "https://github.com/ravarcade/logwatcher"
  },
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.58.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/sctworkingdir",
    "onStartupFinished",
    "onCommand:logwatcher.addHighlight",
    "onCommand:logwatcher.removeHighlight",
    "onCommand:logwatcher.clearHighlight"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Log Watcher",
        "properties": {
          "conf.files.ext": {
            "type": "string",
            "default": "out,k3.txt",
            "description": "Watched extensions",
            "scope": "resource"
          },
          "conf.files.pattern": {
            "type": "string",
            "default": "**/sctworkingdir/*/logs/**/*",
            "description": "Pattern used to select watched dir",
            "scope": "resource"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "logwatcher.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "logwatcher.addHighlight",
        "title": "rav: add highlight"
      },
      {
        "command": "logwatcher.removeHighlight",
        "title": "rav: remove highlight"
      },
      {
        "command": "logwatcher.clearHighlight",
        "title": "rav: clear highlight"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "18.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^8.30.0",
    "glob": "^8.0.3",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "vscode-test": "^1.5.2",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "sanitize-filename": "^1.6.3"
  }
}
